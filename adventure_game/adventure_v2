@when('look')
def look():
    print(current_room)

# inventory
inventory = Bag()

@when('inventory')
def show_inventory():
    print('You have: ')
    if not inventory:
        print('*nothing*')
    for item in inventory:
        print(f'*{item}')
# a small easter egg
playermorale = 0
@when('kill')
def kill():
    say('For no reason at all... you shout KILL!')
    say('It seems to give you some morale...')
    global playermorale
    playermorale += 1
    if playermorale >= 10:
        say('Congrats Westdyk...\nFalse motivation is better than no motivation I guess')
