from adventurelib import *
import adventurelib
import random as r
"""player stuff"""
player_hp = 10
playername = input('Please enter a name\n')
playerdmgmodifier = 0
def prompt():
    global player_hp
    if player_hp <= 0: # how the player dies
        print('you have died')
        input('Push ENTER to exit.')
        exit()
    return '\u2665{hp}\u2665 > '.format(hp=player_hp)
adventurelib.prompt = prompt
